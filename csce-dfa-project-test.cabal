-- Initial csce-dfa-project-test.cabal generated by cabal init.  For
-- further documentation, see http://haskell.org/cabal/users-guide/
name:                csce-dfa-project-test

-- The package version.  See the Haskell package versioning policy (PVP)
-- for standards guiding when and how versions should be incremented.
-- https://wiki.haskell.org/Package_versioning_policy
-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:             0.2.0.1

-- A short (one-line) description of the package.
synopsis:            CSCE 355 DFA Project Tester
description:         An automatated grader for the CSCE 355 DFA project.
license:             BSD3
license-file:        LICENSE
author:              DJP
maintainer:          djpade@gmail.com
-- copyright:
category:            Testing
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md
cabal-version:       >=1.10

source-repository head
  type: git
  location: https://github.com/qfjp/csce_dfa_project_test

library
  hs-source-dirs:      src
  exposed-modules:     Arguments
                     , Data.Dfa
                     , Data.Dfa.Equivalence
                     , ExternChecks
                     , ProgramExecution
                     , ProjectTest
                     , Parser.Build
                     , Parser.Dfa
  build-depends:       base >=4.5 && <4.11
                     , checkers >=0.4 && <0.5
                     , containers >=0.4 && <0.6
                     , data-default >=0.5 && <0.8
                     , directory >=1.2 && <1.3
                     , filepath >=1.3 && <1.5
                     , mtl >= 2.1 && < 2.3
                     , parsec >=3.1 && <3.2
                     , process >=1.2.3.0 && <1.5
                     , QuickCheck >=2.7 && <2.10
                     , text >=1.2 && <1.3

  default-language:    Haskell2010

executable csce-dfa-project-test
  main-is:             Main.hs
  -- Modules included in this executable, other than Main.
  -- other-modules:
  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:

  -- Other library packages from which modules are imported.
  build-depends:       base >=4.5 && <4.11
                     , directory >=1.2 && <1.3
                     , csce-dfa-project-test

  -- Directories containing source files.
  -- hs-source-dirs:

  -- Base language which the package is written in.
  default-language:    Haskell2010

test-suite spec
  default-language:    Haskell2010
  ghc-options:         -Wall
  other-modules:       Data.Dfa.EquivalenceSpec
                     , Parser.DfaSpec
                     , Parser.BuildSpec
                     , ProgramExecutionSpec
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             SpecMain.hs
  --extensions:          QuasiQuotes
  build-depends:       base >=4.5 && <4.11
                     , checkers >=0.4 && <0.5
                     , containers >=0.4 && <0.6
                     , directory >=1.2 && <1.3
                     , hspec >=2.1 && <2.4
                     , hspec-checkers >=0.1 && <0.2
                     , parsec >=3.1 && <3.2
                     , QuickCheck >=2.7 && <2.10
                     , raw-strings-qq >= 1.0 && <1.2
                     , text >=1.2 && <1.3
                     , csce-dfa-project-test
